{
  "name": "react-spa",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn run clean-dist && webpack -p --config=client/configs/webpack/prod.js",
    "clean-dist": "rimraf client/dist/*",
    "lint": "tslint 'client/src/**/*.ts*' --format stylish --project . --force",
    "start-dev": "webpack-dev-server --config=client/configs/webpack/dev.js",
    "start-prod": "yarn run build && node backend/app.js",
    "test": "jest --watch --coverage --config=client/configs/jest.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint",
      "npm run lint:fix",
      "git add"
    ],
    "*.{js,jsx,json}": [
      "npm run format",
      "npm run lint",
      "npm run lint:fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "__tests__/",
    "node_modules/"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
